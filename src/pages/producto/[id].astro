---
import Layout from "@/layouts/Layout.astro";
import products from "@/assets/products.json";
import { Picture } from "astro:assets";
import Specs from "@/components/products/Specs.astro";
import Cta from "@/components/Cta.astro";

export function getStaticPaths() {
    const ids = products
        .filter(({ availability, visibility }) => availability && visibility)
        .map((product) => product.id);
    const params = ids.map((id) => {
        return { params: { id } };
    });

    return [...params];
}

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/products/Jacuzzi * - Fresh Jacuzzis.{jpeg,jpg,png,gif}"
);

const { id: param } = Astro.params;
const product = products.filter(({ id }) => param === id)[0];
const image =
    await images[
        `/src/assets/products/Jacuzzi ${product.name} - Fresh Jacuzzis.jpeg`
    ]();
---

<Layout>
    <section transition:name={`jacuzzi-${product.id}`} class="product">
        <Picture
            loading="lazy"
            src={image.default}
            formats={["avif", "webp", "jpeg"]}
            alt={`Jacuzzi ${product.name} | Fresh Jacuzzis`}
            widths={[150, 300, 600]}
            sizes="(max-width: 600px) 150px, (max-width: 1200px) 300px, 600px"
            transition:name={`jacuzzi-${product.id}-img`}
        />
        <div class="specs">
            <h1 transition:name={`jacuzzi-${product.id}-title`}>
                Jacuzzi {product.name}
            </h1>
            <Specs product={product} />
            <Cta transition:name={`jacuzzi-${product.id}-btn`}>
                Cotiza ahora mismo
            </Cta>
        </div>
    </section>
    <section>
        <h2>Características</h2>
        <div class="product-specs">
            <div class="specs-level">
                <h3>Básico</h3>
                <ul>
                    {product.specs.basic.map((spec) => <li>{spec}</li>)}
                </ul>
            </div>
            <div class="specs-level">
                <h3>Medio</h3>
                <ul>
                    {product.specs.medium.map((spec) => <li>{spec}</li>)}
                </ul>
            </div>
            <div class="specs-level">
                <h3>Completo</h3>
                <ul>
                    {product.specs.full.map((spec) => <li>{spec}</li>)}
                </ul>
            </div>
        </div>
        <Cta>¡Cotiza ahora!</Cta>
    </section>
</Layout>
<style>
    .product {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 20px auto;
    }

    picture {
        border-radius: 10px;
        overflow: hidden;
        width: 90vw;
        height: 90vw;
    }

    img {
        width: 90vw;
        height: 90vw;
        object-fit: cover;
        border-radius: 10px;
    }

    .specs {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 10px;
        justify-content: space-around;
        align-items: center;
    }
    h1 {
        font-size: 2.5rem;
        color: var(--primary-dark);
        width: 30vw;
    }

    a {
        padding: 0.5rem 1rem;
        background-color: var(--primary-color);
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    a:hover {
        background-color: var(--primary-dark);
    }

    @media (min-width: 800px) {
        picture,
        img {
            width: 40vw;
            height: 40vw;
        }
        .product {
            flex-direction: row;
        }
        .specs {
            text-align: center;
            padding: 0 5rem;
            height: 30vw;
        }
    }

    .product-specs {
        margin-top: 2rem;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
    }

    .specs-level {
        margin-bottom: 1.5rem;
        width: 30%;
        min-width: 300px;
    }

    h2 {
        font-size: 2rem;
        color: var(--primary-dark);
    }

    h3 {
        font-size: 1.5rem;
        color: var(--primary-color);
    }

    ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        text-align: left;
    }

    li {
        font-size: 1rem;
        color: var(--text-color);
    }
</style>
