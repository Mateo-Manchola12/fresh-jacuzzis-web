---
import { getImage } from 'astro:assets'
import poster from '@assets/bubbles.jpeg'
import Cta from '@components/Cta.astro'

const optimizedPoster = await getImage({ src: poster })
const generateVideoUrl = (width: number, aspectRatio: string) => {
  return `https://res.cloudinary.com/dct9qtaef/video/upload/q_auto:eco,f_auto,w_${width},vc_auto,du_15,ar_${aspectRatio},c_fill/v1760997622/bubbles`
}

const heroVideoMobile = generateVideoUrl(480, '9:16')
const heroVideoTablet = generateVideoUrl(768, '16:9')
const heroVideoDesktop = generateVideoUrl(1280, '16:9')
---

<section class="hero" aria-labelledby="hero-heading" aria-describedby="hero-description">
  <video class="hero-video" autoplay muted loop playsinline poster={optimizedPoster.src}>
    <source src={heroVideoMobile} media="(max-width: 767px)" />
    <source src={heroVideoTablet} media="(max-width: 1279px)" />
    <source src={heroVideoDesktop} media="(min-width: 1280px)" />
  </video>

  <div class="hero-content">
    <h1 id="hero-heading">Sumérgete en el lujo, relájate en la perfección</h1>
    <p id="hero-description">
      Diseñamos jacuzzis exclusivos que transforman tu hogar en un oasis de bienestar y
      sofisticación.
    </p>
    <Cta aria-label="Descubre más sobre nuestra tienda">Cotiza aquí</Cta>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: calc(100vh - 100px);
    max-height: 800px;
    min-height: 400px;
    overflow: hidden;
    margin: 0;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.45);
    z-index: 1;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    top: 50%;
    transform: translateY(-50%);
    margin: 0 2rem;
  }

  h1 {
    font-size: clamp(1.8rem, 4vw, 3rem);
    margin-bottom: 0.5em;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
  }

  p {
    font-size: clamp(1rem, 2vw, 1.3rem);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero {
      height: 70vh;
    }
  }
</style>
