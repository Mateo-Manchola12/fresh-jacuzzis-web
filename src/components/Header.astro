---
import FreshJacuzzisLogo from "@svg/FreshJacuzzisLogo.astro";
import HeaderNav from "@components/HeaderNav.astro";
import { DOMAIN_NAME } from "@constants/static_paths";
---

<header role="banner" aria-label="Encabezado de Fresh Jacuzzis">
    <a
        href={DOMAIN_NAME}
        aria-label="Ir a la página principal de Fresh Jacuzzis"
    >
        <FreshJacuzzisLogo size={60} />
        <h1 aria-label="Título de la página">fresh</h1>
    </a>
    <HeaderNav />
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-content: space-between;
        align-items: center;
        padding: 1rem;
        background-color: var(--background-dark);
        flex-flow: row wrap;
        row-gap: 16px;
        border-bottom: 3px solid var(--secondary-light);
        box-shadow: 2px 0px 5px 0px var(--secondary-light);
        width: 100%;
        height: 100px;
    }

    a {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: var(--text-light);
        height: 4rem;
    }

    h1 {
        font-family: "Archivo Black";
        text-transform: uppercase;
        font-size: x-large;
        font-weight: 800;
        margin-left: 0.5rem;
    }
</style>
