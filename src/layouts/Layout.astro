---
import { ClientRouter } from "astro:transitions";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import FaviconLinks from "@components/FaviconLinks.astro";

import "@fontsource/poppins/100.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/700.css";
import "@fontsource/archivo-black/400.css";

import "aos/dist/aos.css";
import Meta from "@components/Meta.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" transition:name="root" transition:animate="none">
    <head>
        <meta charset="UTF-8" />

        <Meta />
        <FaviconLinks />
        <title>{title}</title>
        <ClientRouter />
    </head><body>
        <Header />

        <main
            role="main"
            aria-labelledby="main-content"
            transition:animate="slide"
        >
            <slot />
        </main>

        <Footer />
        <script>
            import { aosInit } from "@js/aos";

            aosInit();

            document.addEventListener("astro:after-swap", aosInit);
        </script>
    </body>
</html>

<style is:global>
    :root {
        /* Colores principales */
        --primary-color: #2a7f9d; /* Azul petróleo */
        --primary-dark: #205d75; /* Azul profundo */
        --primary-light: #4fa3c1; /* Azul agua */

        --secondary-color: #c2b49a; /* Beige tostado */
        --secondary-dark: #a69378; /* Marrón suave */
        --secondary-light: #ded2ba; /* Arena clara */

        /* Colores de fondo y texto */
        --background-light: #f4f4f4; /* Blanco grisáceo */
        --background-dark: #e8e8e8; /* Gris perla */
        --text-dark: #3d3d3d; /* Gris grafito */
        --text-light: #5a5a5a; /* Gris medio */

        /* Colores de acento */
        --accent-color: #f1ebdf; /* Marfil cálido */
        --accent-dark: #d6c9b5; /* Beige clásico */
        --accent-light: #faf8f3; /* Crema claro */

        /* Colores interactivos */
        --button-hover: #205d75; /* Azul intenso */
        --button-active: #174456; /* Azul noche */
        --border-color: #5e9bb0; /* Celeste ahumado */
    }

    *,
    *::before,
    *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family:
            "Poppins",
            sans-serif,
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue";
        font-size: 1.2rem;
        line-height: 1.6;
        color: var(--text-dark);
        background-color: var(--background-light);
        margin: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 100vh;
        align-items: center;
    }

    main {
        min-height: calc(100vh - 100px);
        width: 100%;
    }

    a {
        text-decoration: none;
        color: var(--primary-color);
    }

    a:focus,
    button:focus {
        outline: 3px solid var(--primary-dark);
    }

    section {
        padding: 20px;
        margin: 20px 0;
        text-align: center;
        position: relative;
    }

    section::-webkit-scrollbar {
        height: 8px;
    }

    section::-webkit-scrollbar-thumb {
        background-color: var(--secondary-color);
        border-radius: 4px;
    }

    section::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
</style>
