{
    "extends": "astro/tsconfigs/strict",
    "include": ["src", ".astro/types.d.ts", "src/env.d.ts"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@layout": ["src/layouts/Layout.astro"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"],
            "@svg/*": ["src/svg/*"],
            "@js/*": ["src/js/*"],
            "@types/*": ["src/types/*"],
            "@hooks/*": ["src/hooks/*"],
            "@constants/*": ["src/constants/*"]
        }
    }
}
